<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="PickerDialogCustom">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorPrimary">@color/dark_main_color</item>
        <item name="colorControlNormal">@color/main_color</item>
        <item name="android:datePickerMode">spinner</item>
    </style>
    <style name="EditTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlActivated">@color/main_color</item>
        <item name="colorControlNormal">@color/light_gray</item>
    </style>
    <style name="TabFont" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">18dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="MaterialAppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/light_gray</item>
        <item name="colorAccent">@color/main_color</item>
    </style>
    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">16dp</item>
    </style>
    <style name="BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">17dp</item>
    </style>
</resources>