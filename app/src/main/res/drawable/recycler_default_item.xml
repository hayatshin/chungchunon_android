<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="true" android:left="-1dp" android:top="-1dp" android:right="-1dp">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/light_gray" />
            <solid android:color="@color/very_light_gray" />
        </shape>
    </item>

    <item android:state_focused="false" android:left="-1dp" android:top="-1dp" android:right="-1dp">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/very_light_gray" />
            <solid android:color="@color/white" />
        </shape>
    </item>

</layer-list>