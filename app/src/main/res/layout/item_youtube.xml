<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_marginRight="18dp">

    <RelativeLayout
        android:id="@+id/youtubeLayout"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/mission_card_background"
        android:clipToOutline="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:translationZ="90dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:src="@drawable/avatar_background_white" />

        <ImageView
            android:translationZ="90dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_circle_play_solid" />

        <ImageView
            android:id="@+id/youtubeView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:translationZ="0dp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/youtubeTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/youtubeLayout"
        android:layout_alignParentBottom="true"
        android:gravity="top|center_horizontal"
        android:textColor="@color/custom_gray"
        android:textSize="18dp"
        tools:text="안녕하세요" />

</RelativeLayout>