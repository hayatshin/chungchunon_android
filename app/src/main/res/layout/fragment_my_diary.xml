<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingHorizontal="30dp"
    android:paddingVertical="50dp"
    tools:context=".Fragment.MyDiaryFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_calendar" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:fontFamily="@font/room703"
                android:text="오늘 하루"
                android:textColor="@color/main_color"
                android:textSize="27sp" />

        </LinearLayout>

        <LinearLayout
            android:background="@drawable/noti_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="vertical">

            <TextView
                android:id="@+id/thisMonth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:textSize="17sp"
                android:textStyle="bold"
                tools:text="12월 일기 작성일" />

            <TextView
                android:id="@+id/diaryCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                tools:text="15일 / 31일" />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="걸음수"
            android:textSize="20sp"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_run" />

            <TextView
                android:textColor="@color/dark_main_color"
                android:id="@+id/todayStepCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:textSize="25sp"
                android:textStyle="bold"
                tools:text="0보" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".5"
        android:gravity="center_vertical">

        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="내 마음"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Spinner
            android:gravity="center"
            android:background="@drawable/mindbox"
            android:layout_weight="1"
            android:id="@+id/todayMood"
            android:layout_width="55dp"
            android:layout_height="45dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/diaryBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="한마디"
                android:textSize="20sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:textSize="15sp"
                android:id="@+id/recordBtn"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="end"
                android:background="@drawable/sub_button"
                android:paddingHorizontal="15dp"
                android:text="음성으로 쓰기" />

        </LinearLayout>

        <EditText
            android:textSize="20sp"
            android:gravity="top"
            android:padding="20dp"
            android:id="@+id/todayDiary"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@drawable/mindbox_bold" />

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:background="@drawable/default_button"
        android:id="@+id/diaryBtn"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="일기 작성"
        android:textSize="20sp"
        android:textStyle="bold" />
</LinearLayout>