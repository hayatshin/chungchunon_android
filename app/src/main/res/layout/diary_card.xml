<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/diarybox"
        android:orientation="vertical"
        android:padding="20dp"
        app:cardElevation="10dp">

        <TextView
            android:textSize="15sp"
            android:id="@+id/userWriteTime"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:text="2023-01-04" />

        <LinearLayout
            android:id="@+id/userInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/userWriteTime">

            <TextView
                android:textSize="20sp"
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:text="신순국" />

            <TextView
                android:textSize="20sp"
                android:textStyle="bold"
                android:id="@+id/userStepCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:text="1,357보" />

            <ImageView
                android:layout_marginRight="80dp"
                android:id="@+id/userMood"
                android:layout_width="45dp"
                android:layout_height="45dp"
                tools:src="@drawable/ic_emotion_1" />

        </LinearLayout>

        <TextView
            android:textColor="@color/black"
            android:textSize="23sp"
            android:fontFamily="@font/room703"
            android:id="@+id/userDiary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingVertical="10dp"
            app:layout_constraintTop_toBottomOf="@id/userInfo"
            tools:text="보고싶다. 건강하거라" />

        <RelativeLayout
            android:id="@+id/likeBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/userDiary">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:gravity="center">

                <ImageView
                    android:id="@+id/likeIcon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_emptyheart" />

                <TextView
                    android:textSize="16sp"
                    android:id="@+id/likeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="좋아요 3" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/commentBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="center">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/commentIcon"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_emptychat" />

                <TextView
                    android:textSize="16sp"
                    android:id="@+id/commentText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="댓글 2" />
            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>